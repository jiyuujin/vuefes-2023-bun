{
  "extends": ["markuplint:recommended"],
  "parser": {
    ".vue$": "@markuplint/vue-parser"
  },
  "specs": {
    ".vue$": "@markuplint/vue-spec"
  },
  "rules": {
    "invalid-attr": {
      "option": {
        "attrs": {
          "placeholder": {
            "disallowed": false
          },
          "required": {
            "disallowed": false
          }
        }
      }
    }
  },
  "excludeFiles": []
}
