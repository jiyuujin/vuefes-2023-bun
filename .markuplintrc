{
  "extends": [
    "markuplint:recommended"
  ],
  "parser": {
    ".vue$": "@markuplint/vue-parser"
  },
  "specs": {
    ".vue$": "@markuplint/vue-spec"
  },
  "rules": {
    "invalid-attr": {
      "options": {
        /* v3.7.0 - attr の非推奨化に伴い allowAttrs の利用に変更 ref: https://github.com/markuplint/markuplint/releases/tag/v3.7.0 */
        "allowAttrs": ["placeholder", "required"]
      }
    }
  },
  "excludeFiles": [
    /* 修正によって既存コードを破壊しないよう、一時的に退避している */
    "app/components/timetable/TimetableViewMobile.vue",
    "app/components/DragDropArea.vue",
    "app/components/timetable/TimetableBodyRow.vue",
    "app/components/forms/InputField.vue"
  ]
}
